<ol class="breadcrumb">
  <li class="active">所有板块</li>
</ol>

<div class="panel-group">
	<% @categories.each do |c| %>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title"><%= c.name %></h4>
			</div>
			<div class="panel-collapse collapse in">
				<table class="table table-hover" style="margin-bottom:0px;">
					<tbody>
						<% c.boards.each do |board| %>
							<tr>
								<td style="width:56px;">
									<img data-src="holder.js/40x40" alt="...">
								</td>
								<td style="width:60%;"><%= link_to board.name, posts_path(:board => board) %></td>
								<td><%= board.posts.count %> / <small><%= board.posts.map { |p| p.comments }.flatten.count %></small></td>
									<td>
										<%= board.posts.last.title %>
										<br/>
										<small><%= I18n.l board.posts.last.created_at, :format => :long %></small>
									</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	<% end %>
</div>
