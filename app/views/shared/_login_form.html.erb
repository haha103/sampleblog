<%= form_tag({ controller: "sessions", action: "create" }, method: "post", class: "form-horizontal") do %>
	<div class="form-group">
		<%= label_tag :nick, "用户名", :class => "col-md-3 control-label" %>
    <div class="col-md-9">
			<%= text_field_tag :nick, nil, :placeholder => "用户名", :class => "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= label_tag :passwd, "密码", :class => "col-md-3 control-label" %>
    <div class="col-md-9">
			<%= password_field_tag :passwd, nil, :placeholder => "密码", :class => "form-control" %>
		</div>
	</div>
  <hr class="hr-condensed"/>
  <div class="form-group" style="margin-bottom:0px;">
    <div class="col-md-offset-3 col-md-9">
			<%= button_tag '<span class="glyphicon glyphicon-log-in"></span> &nbsp;登录'.html_safe, :class => "btn btn-primary btn-sm" %>
		</div>
	</div>
<% end %>
