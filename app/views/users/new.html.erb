<h3>用户注册</h3>

<hr/>

<div class="row">
	<div class="col-md-5">
		<%= form_for @user, :url => users_path, :html => { :multipart => true, :class => "form-horizontal" } do |f| %>
			<% [
					{ field_name: :nick, field_label: "昵称", col1: 3, col2: 9, f: f },
					{ field_name: :name, field_label: "姓名", col1: 3, col2: 9, f: f },
					{ field_name: :email, field_label: "电子邮箱", col1: 3, col2: 9, f: f },
					{ field_name: :mobile, field_label: "手机号码", col1: 3, col2: 9, f: f }
			 ].each do |locals| %>
				<%= render partial: "shared/horizontal_form_group_textfield", locals: locals %>	
			<% end %>
			<%= render partial: "shared/horizontal_form_group_passwdfield", locals: { field_name: :passwd, field_label: "密码", col1: 3, col2: 9, f: f } %>
			<div class="form-group">
				<%= f.label :avatar, :class => "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= f.file_field :avatar %>
				</div>
			</div>
		<% end %>
	</div>
</div>
