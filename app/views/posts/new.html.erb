<div class="row">
  <div class="col-md-6">
		<h3 style="margin-bottom: 0px;">发表帖子</h3>
	</div>
  <div class="col-md-6">
		<%= link_to '回到列表', posts_path, :class => "btn btn-default pull-right", :style => "margin-top: 12px;" %>
	</div>
</div>

<hr style="margin-top: 10px;margin-bottom:20px;"/>

<%= form_for @post do |f| %>
  <div class="form-group">
    <label for="title">标题</label>
		<%= f.text_field :title, :class => "form-control" %>
	</div>
	<div class="form-group">
    <label for="content">内容</label>
		<%= f.text_area :content, :class => "form-control", :rows => "10" %>
	</div>
	<%= f.button '确认发表', :class => "btn btn-success" %>
<% end %>
