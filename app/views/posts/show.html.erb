<div class="row" style="margin-bottom:5px;">
  <div class="col-md-1" style="padding-right:0px;">
		<!-- Button trigger modal -->
		<button class="btn btn-primary btn-block" data-toggle="modal" data-target="#replyPostModal">
			回复主题
		</button>

		<!-- Modal -->
		<div class="modal fade" id="replyPostModal" tabindex="-1" role="dialog" aria-labelledby="replyPostModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h4 class="modal-title" id="replyPostModal">回复主题</h4>
					</div>
					<div class="modal-body">
						<form role="form">
							<div class="form-group">
								<label for="replyPost">主题: <%= @post.title %></label>
								<textarea class="form-control" rows="8" name="comment"></textarea>
							</div>
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">撤销</button>
						<button type="button" class="btn btn-primary">回复</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-1" style="padding-right:10px;padding-left:5px;">
		<%= link_to '返回列表', posts_path, :class => "btn btn-default pull-right btn-block" %>
	</div>
  <div class="col-md-10">
		<%= will_paginate @comments,
				:renderer => BootstrapPagination::Rails,
				:class => "pagination-sm pagination-condensed pull-right",
				:previous_label => "<<",
				:next_label => ">>" %>
	</div>
</div>
<div class="panel-group" style="margin-bottom: 0px;">
	<div class="panel panel-default">
		<div class="panel-heading">
      <h4 class="panel-title">
				<%= @post.title %>
			</h4>
		</div>
    <div class="panel-collapse collapse in">
			<div class="panel-body">
        <div class="row">
					<div class="col-md-2">
            <div class="post-side-panel">
              <p>
                <b><%= @post.user.nick %></b>
							</p>
							<a href="#" class="thumbnail">
								<img data-src="holder.js/100%x150" alt="...">
							</a>
						</div>
					</div>
          <div class="col-md-10">
						发表于 <%= I18n.l @post.created_at %>
						<hr class="hr-condensed"/>
						<p class="post-content">
							<%= @post.content %>
						</p>
						<hr class="hr-condensed"/>
						<a href="">回复</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<% @comments.each do |c| %>
		<div class="panel panel-default">
			<div class="panel-collapse collapse in">
				<div class="panel-body">
					<div class="row">
						<div class="col-md-2">
							<div class="post-side-panel">
								<p>
									<b><%= c.user.nick %></b>
								</p>
								<a href="#" class="thumbnail">
									<img data-src="holder.js/100%x150" alt="...">
								</a>
							</div>
						</div>
						<div class="col-md-10">
							回复于 <%= I18n.l c.created_at %>
							<hr class="hr-condensed"/>
							<%= render partial: "quote", locals: { c: c } %>
							<p class="post-content">
								<%= c.content %>
							</p>
							<hr class="hr-condensed"/>
							<a href="">回复</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
<%= will_paginate @comments,
				:renderer => BootstrapPagination::Rails,
				:class => "pagination-sm pagination-condensed",
				:previous_label => "<<",
				:next_label => ">>" %>
